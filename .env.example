# Environment
ENVIRONMENT=local # local or production

# WordPress
WORDPRESS_DB_HOST=mysql
WORDPRESS_DB_NAME=wordpress
WORDPRESS_DB_USER=wordpress
WORDPRESS_DB_PASSWORD=wordpress_password

# MySQL (only used in local environment)
MYSQL_ROOT_PASSWORD=root_password
MYSQL_DATABASE=wordpress
MYSQL_USER=wordpress
MYSQL_PASSWORD=wordpress_password

# Production Database (used when ENVIRONMENT=production)
PROD_DB_HOST=your-external-db-host
PROD_DB_NAME=wordpress
PROD_DB_USER=wordpress
PROD_DB_PASSWORD=your-production-password

# WordPress Configuration
WORDPRESS_TABLE_PREFIX=wp_
WORDPRESS_DEBUG=false
